#include<stdio.h>
int main(){
    int n,classes,attended=0,max=0,max_count=0,k;
    scanf("%d%d",&n,&classes);
    char attendance[n][classes];
    for(int i=0;i<n;i++)
        scanf("%s",attendance[i]);
    for(int i=0;i<n-1;i++){
        k=i+1;
        while(k<n){
            attended=0;
            for(int j=0;j<classes;j++){
                if(attendance[i][j]=='1'||attendance[k][j]=='1')
                    attended++;
            }
            if(max<attended){
                max=attended;
                max_count=1;
            }
            else if(max==attended)
                max_count++;
            k++;
        }
    }
    printf("%d\n%d",max,max_count);
    return 0;
}
